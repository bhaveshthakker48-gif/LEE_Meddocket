<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.entui.EntPreOpDetailsActivity">

    <include
        android:id="@+id/toolbarEyeOPDDoctorsNote"
        layout="@layout/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/toolbarEyeOPDDoctorsNote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <!-- Basic Checkboxes -->
            <CheckBox
                android:id="@+id/lineUpForSurgery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Injection TT"
                android:layout_marginBottom="@dimen/_5sdp" />

            <CheckBox
                android:id="@+id/medication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adult Tab Alprazolam 0.25mg Hs"
                android:layout_marginBottom="@dimen/_5sdp" />

            <!-- Horizontal Layout: Checkbox + EditText -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/checkboxXRay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Current Medicine"
                    android:paddingEnd="@dimen/_5sdp" />

                <EditText
                    android:id="@+id/currentedicine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Current Medicine"
                    android:visibility="gone"
                    android:background="@drawable/edittext_background"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_5sdp" />
            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nothing by mouth before surgery"
                android:fontFamily="@font/opensans_extrabold"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Children"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_10sdp" />

            <CheckBox
                android:id="@+id/solidFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Solid Food or thick liquids need to stop" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6 hours prior to surgery"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/childrensolidorliquidTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Select Time"
                    android:focusable="false"
                    android:visibility="gone"
                    android:clickable="true"
                    android:background="@drawable/edittext_background"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="center" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/breastfedBabies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Breastfed babies may nurse up to" />

            <!-- Breastfed Babies -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3 hours prior to surgery"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/childrenbreastfedTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Select Time"
                    android:focusable="false"
                    android:visibility="gone"
                    android:clickable="true"
                    android:background="@drawable/edittext_background"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="center" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/waterOrClearLiquird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Water or clear liquids (e.g. apple juice) can be given up to" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 hour prior to surgery"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/childrenwaterorliquidTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Select Time"
                    android:focusable="false"
                    android:clickable="true"
                    android:visibility="gone"
                    android:background="@drawable/edittext_background"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adults &amp; Teenagers over age of 12"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_15sdp" />

            <CheckBox
                android:id="@+id/adult1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Solid Food &amp; dairy products until" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8 hours prior to surgery"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/adultsolidorliquidTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:hint="Select Time"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/edittext_background"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="center" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/adult2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:text="Water or clear liquids (e.g. apple juice)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2 hours prior to surgery"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/adultwaterorliquidTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Select Time"
                    android:focusable="false"
                    android:visibility="gone"
                    android:clickable="true"
                    android:background="@drawable/edittext_background"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Other -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:weightSum="2">

                <CheckBox
                    android:id="@+id/otherInstructions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Other" />

                <EditText
                    android:id="@+id/otherInstructionsDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Other Instruction"
                    android:visibility="gone"
                    android:background="@drawable/edittext_background"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/surgeryRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/surgeryCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surgery Cancel"
                    android:textSize="@dimen/_12ssp"
                    android:maxLines="2"
                    android:ellipsize="none"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginEnd="8dp"/>

                <RadioButton
                    android:id="@+id/radioLineForSurgery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Line for Surgery"
                    android:textSize="@dimen/_12ssp"
                    android:maxLines="2"
                    android:ellipsize="none"
                    android:gravity="center"
                    android:textAlignment="center" />
            </RadioGroup>

            <EditText
                android:id="@+id/surgeryCancelReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edittext_background"
                android:hint="Enter Surgery Cancel Reason"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_10ssp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageLineUpForSurgery"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <TextView
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note : Please Upload Consent Form"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/red"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/uploadImage"
                style="@style/upload_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_blue"
                app:cardBackgroundColor="@color/light_blue"
                android:backgroundTint="@color/light_blue"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvUploadText"
                    style="@style/upload_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Image" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/viewDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/viewImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="View Image"
                    android:padding="8dp"
                    android:src="@drawable/ic_view" />

                <ImageView
                    android:id="@+id/deleteImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Delete Image"
                    android:padding="8dp"
                    android:src="@drawable/ic_delete" />
            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/submitButton"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:cardBackgroundColor="@color/main_color"
                app:cardCornerRadius="@dimen/_10sdp"
                app:strokeColor="@android:color/transparent">

                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnEdit"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="@dimen/_10sdp"
                app:strokeColor="@android:color/transparent">

                <TextView
                    android:id="@+id/tvEditOrthosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Edit"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
