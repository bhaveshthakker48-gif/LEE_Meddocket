<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:elevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/logo1" />

            <!-- <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:fontFamily="@font/opensans_semibold"
                 android:shadowColor="@color/gray"
                 android:shadowDx="-2"
                 android:shadowDy="-2"
                 android:shadowRadius="1"
                 android:text="@string/app_name"
                 android:textAlignment="center"
                 android:textColor="@color/main_color"
                 android:textSize="35sp"
                 android:textStyle="bold" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30sp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardView_ScanQR"
                    android:layout_width="200dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/light_blue"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="9dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight=".4"
                            android:src="@drawable/ic_qr_code_scanner" />

                        <TextView
                            android:id="@+id/tvScanner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center_vertical"
                            android:text="Scan QR"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardView_ViewReport_medicine"
                    android:layout_width="200dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/light_blue"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="9dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <TextView
                            android:id="@+id/tvViewReportMedicine"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_regular"
                            android:text="View Report"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"

        android:layout_marginEnd="@dimen/_5sdp"
        android:gravity="right"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView

            android:id="@+id/CardView_logout"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="@dimen/_2sdp"
            android:elevation="0dp"

            app:cardBackgroundColor="@color/main_color"
            app:cardCornerRadius="25dp"
            app:cardElevation="9dp">

            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvLogout"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="center"

                    android:background="@drawable/logout"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/opensans_regular"

                    android:gravity="center"
                    android:singleLine="false"

                    android:textColor="@color/white" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llSyncStatus">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvUnSyncedForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_gravity="center"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/main_color"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="9dp">


            <TextView
                android:id="@+id/tvUnsyncedForms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Unsynced Form :- 0"
                android:textColor="@color/white"

                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvUnSyncedImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:elevation="0dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/main_color"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="9dp">


            <TextView
                android:id="@+id/tvUnsyncedImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:singleLine="false"
                android:text="Unsynced Images :- 0"
                android:textColor="@color/white" />


        </androidx.cardview.widget.CardView>




    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp">

        <!-- Sync Button in Card (Main FAB) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/light_blue"
            app:cardCornerRadius="@dimen/_12sdp"
            app:strokeColor="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivSync"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_sync"
                android:contentDescription="@string/app_name"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- About Us FAB (above the main button) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/aboutUs_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_blue"
            android:contentDescription="@string/app_name"
            app:fabSize="mini"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_analytics"
            app:tint="@color/white"
            app:layout_constraintBottom_toTopOf="@id/fab"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- About Us Label -->
        <TextView
            android:id="@+id/aboutUs_fab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/opensans_regular"
            android:text="About Us"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/aboutUs_fab"
            app:layout_constraintBottom_toBottomOf="@id/aboutUs_fab"
            app:layout_constraintEnd_toStartOf="@id/aboutUs_fab"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>