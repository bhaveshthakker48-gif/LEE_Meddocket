<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_1sdp"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView

        android:id="@+id/CardView_patientList"
        android:elevation="@dimen/_2sdp"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="@dimen/_2sdp"

        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/LinearLayout_patientList"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    style="@style/textView_normal"
                    android:id="@+id/TextView_PatientID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="1"
                    style="@style/textView_normal"
                    android:id="@+id/TextView_patientAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <TextView

                style="@style/textView_normal"
                android:id="@+id/TextView_PatientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView

                style="@style/textView_normal"
                android:id="@+id/TextView_PatientGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView

                style="@style/textView_normal"
                android:id="@+id/TextView_PatientVillage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>