        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_55sdp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/main_color"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="9dp">

            <LinearLayout
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:singleLine="false"
                    android:id="@+id/tvUnsyncedForms"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center"

                    android:textColor="@color/white"

                     />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_55sdp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/main_color"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="9dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:singleLine="false"
                    android:id="@+id/tvUnsyncedImages"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center"

                    android:textColor="@color/white"
                   />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/CardView_logout"
            android:layout_width="170dp"
            android:layout_height="55dp"
            android:elevation="0dp"

            android:layout_gravity="center"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/main_color"
            app:cardCornerRadius="25dp"
            app:cardElevation="9dp">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView

                    android:id="@+id/tvLogout"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"

                    android:background="@drawable/logout"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/opensans_regular"

                    android:gravity="center"
                    android:singleLine="false"

                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <FrameLayout
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_add"

            app:fabSize="normal" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            tools:ignore="HardcodedText">

            <androidx.cardview.widget.CardView
                android:id="@+id/CardView_camp_completed"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/main_color"
                app:cardCornerRadius="25dp"
                app:cardElevation="9dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Camp Completed"
                        android:singleLine="false"
                        android:id="@+id/tvCampCompleted"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".7"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"


                        android:textColor="@color/white"

                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!--This will be the parent Floating Action Button-->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/add_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:backgroundTint="@color/main_color"
                android:text="Actions"
                android:textColor="@color/white"
                app:icon="@drawable/ic_add"
                app:iconTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <!--Floating action button for add alarm-->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/sync_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:backgroundTint="@color/light_blue"
                android:contentDescription="@string/app_name"
                app:fabSize="mini"
                app:layout_constraintBottom_toTopOf="@+id/add_fab"
                app:layout_constraintEnd_toEndOf="@+id/add_fab"
                app:srcCompat="@drawable/sync"
                app:tint="@color/white" />
            <!--Action name text for the add alarm button-->
            <TextView
                android:id="@+id/add_sync_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Sync"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/sync_fab"
                app:layout_constraintEnd_toStartOf="@+id/sync_fab"
                app:layout_constraintTop_toTopOf="@+id/sync_fab" />
            <!--Floating action button for add person-->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/patients_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:contentDescription="@string/app_name"
                app:fabSize="mini"
                android:layout_margin="@dimen/_3sdp"
                app:layout_constraintBottom_toTopOf="@+id/sync_fab"
                app:layout_constraintEnd_toEndOf="@+id/sync_fab"
                app:layout_constraintStart_toStartOf="@+id/sync_fab"
                app:srcCompat="@drawable/ic_patients"
                app:tint="@color/white" />
            <!--Action name text for the add person button-->
            <TextView
                android:id="@+id/add_person_action_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Syn Reports"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/patients_fab"
                app:layout_constraintEnd_toStartOf="@+id/patients_fab"
                app:layout_constraintTop_toTopOf="@+id/patients_fab" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/analytics_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:contentDescription="@string/app_name"
                app:fabSize="mini"
                android:layout_margin="@dimen/_3sdp"
                app:layout_constraintBottom_toTopOf="@+id/patients_fab"
                app:layout_constraintEnd_toEndOf="@+id/patients_fab"
                app:layout_constraintStart_toStartOf="@+id/patients_fab"
                app:srcCompat="@drawable/ic_analytics"
                app:tint="@color/white" />
            <!--Action name text for the add person button-->
            <TextView
                android:id="@+id/add_analytics_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Analytics"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/analytics_fab"
                app:layout_constraintEnd_toStartOf="@+id/analytics_fab"
                app:layout_constraintTop_toTopOf="@+id/analytics_fab" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/aboutUs_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:contentDescription="@string/app_name"
                app:fabSize="mini"
                android:layout_margin="@dimen/_3sdp"
                app:layout_constraintBottom_toTopOf="@+id/analytics_fab"
                app:layout_constraintEnd_toEndOf="@+id/analytics_fab"
                app:layout_constraintStart_toStartOf="@+id/analytics_fab"
                app:srcCompat="@drawable/ic_analytics"
                app:tint="@color/white" />
            <!--Action name text for the add person button-->
            <TextView
                android:id="@+id/aboutUs_fab_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/opensans_regular"
                android:text="About Us"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/aboutUs_fab"
                app:layout_constraintEnd_toStartOf="@+id/aboutUs_fab"
                app:layout_constraintTop_toTopOf="@+id/aboutUs_fab" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</LinearLayout>