<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvOrthosisForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llOrthosisTab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/main_color"
                android:backgroundTint="@color/main_color"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOrthosisType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:ems="7"
                    android:maxLines="1"
                    android:text="(1) Select Orthosis Type"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:id="@+id/ivArrowDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_weight="0.2"
                    android:src="@drawable/ic_arrow_up" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOrthosisDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

<!--                <LinearLayout-->
<!--                    android:id="@+id/llOrthosisStatus"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_marginStart="@dimen/_5sdp"-->
<!--                    android:layout_marginTop="@dimen/_8sdp"-->
<!--                    android:layout_marginEnd="@dimen/_5sdp"-->
<!--                    android:orientation="horizontal"-->
<!--                    android:padding="@dimen/_4sdp"-->
<!--                    android:weightSum="2">-->

<!--                    <TextView-->
<!--                        android:id="@+id/tvOrthosisStatus"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:layout_weight="0.7"-->
<!--                        android:text="Orthosis Status* : "-->
<!--                        android:textSize="@dimen/_12ssp"-->
<!--                        android:textStyle="bold" />-->

<!--                    <Spinner-->
<!--                        android:id="@+id/etOrthosisStatus"-->
<!--                        style="@style/spinner_padding_left_right"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="@dimen/_30sdp"-->
<!--                        android:layout_marginEnd="@dimen/_8sdp"-->

<!--                        android:layout_weight="1.3"-->
<!--                        android:background="@drawable/spinner_background" />-->
<!--                </LinearLayout>-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etlOrthosisStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp">


                    <!--                    <com.google.android.material.textfield.TextInputEditText-->
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/etOrthosisStatus"
                        style="@style/edit_text_style_new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:inputType="none"
                        android:backgroundTint="#F4FAFF"
                        tools:hint="@string/txt_orthosis_status"
                        android:textColor="@color/gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etlStatusNotes"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etStatusNotes"
                        style="@style/edit_text_style_new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F4FAFF"
                        tools:hint="Comments*"
                        android:textColor="@color/gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etlFittingStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp">


                    <!--                    <com.google.android.material.textfield.TextInputEditText-->
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/etFittingStatus"
                        style="@style/edit_text_style_new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:inputType="none"
                        android:backgroundTint="#F4FAFF"
                        tools:hint="@string/txt_fitting_status"
                        android:textColor="@color/gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etlFittingFeedback"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFittingFeedback"
                        style="@style/edit_text_style_new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F4FAFF"
                        tools:hint="@string/txt_fitting_feedback"
                        android:textColor="@color/gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/llMeasurementsDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvOrthosisMeasurementTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/main_color"
                        android:gravity="center"
                        android:padding="@dimen/_6sdp"
                        android:text="@string/txt_measurements"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:id="@+id/llMeasurementColumn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/tvMeasurementSrNo"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_1sdp"
                            android:layout_weight="0.5"
                            android:background="@color/main_color"
                            android:gravity="center"
                            android:text="No"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/tvMeasurementName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_1sdp"
                            android:layout_weight="2.5"
                            android:background="@color/main_color"
                            android:gravity="center"
                            android:text="Name"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvMeasurementValue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/main_color"
                            android:gravity="center"
                            android:text="Value"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMeasurementList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_fitting_measurement" />

                    <LinearLayout
                        android:id="@+id/llNewMeasurements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNewMeasurements"
                            android:layout_width="match_parent"
                            android:background="@color/green"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            android:text="New Measurements"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12ssp"
                            android:padding="@dimen/_6sdp"
                            android:gravity="center"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvOrthosisMeasurements"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            tools:itemCount="2"
                            android:visibility="visible"
                            tools:listitem="@layout/item_orthosis_measurement" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>