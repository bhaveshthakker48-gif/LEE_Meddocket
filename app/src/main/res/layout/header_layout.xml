<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_layout_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:src="@drawable/impact_logo2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <TextView

            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Prescription"
            android:textSize="6sp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="textStart"
                    android:textSize="5sp"
                    style="@style/textView_normal1"
                    android:text="Camp Name:"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView

                    android:textAlignment="textStart"
                    android:textSize="5sp"
                    style="@style/textView_normal1"
                    android:id="@+id/TextView_CampName"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="textStart"
                    android:textSize="5sp"
                    style="@style/textView_normal1"
                    android:text="Patient Name:"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="5sp"
                    style="@style/textView_normal1"
                    android:id="@+id/TextView_PatientName"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="5sp"
                    style="@style/textView_normal1"
                    android:text="Gender/Age"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="5sp"
                    style="@style/textView_normal1"
                    android:id="@+id/TextView_PatientID"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="7dp"
                android:background="@drawable/rx"
                android:layout_width="10dp"
                android:layout_height="10dp"/>


            <LinearLayout
                android:weightSum="7.5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/_3ssp"
                    android:padding="@dimen/_2sdp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:text="Generic"
                    style="@style/textView_bold"
                    android:background="@drawable/table_cell_border"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/_3ssp"
                    android:padding="@dimen/_2sdp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:text="Brand"
                    style="@style/textView_bold"
                    android:background="@drawable/table_cell_border"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>



                <TextView
                    style="@style/textView_bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/table_cell_border"
                    android:padding="@dimen/_2sdp"
                    android:text="Quantity"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_3ssp" />

                <TextView
                    android:textSize="@dimen/_3ssp"
                    android:padding="@dimen/_2sdp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:text="Dose"
                    style="@style/textView_bold"
                    android:background="@drawable/table_cell_border"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textView_bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/table_cell_border"
                    android:padding="@dimen/_2sdp"
                    android:text="Frequency"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_3ssp" />
                <TextView
                    android:textSize="@dimen/_3ssp"
                    android:padding="@dimen/_2sdp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:text="Duration"
                    android:maxLines="1"
                    style="@style/textView_bold"
                    android:background="@drawable/table_cell_border"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>




            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>