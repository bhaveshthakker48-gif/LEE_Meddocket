<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/baby_blue"

    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_data_analytics"
        layout="@layout/toolbar" />



        <androidx.cardview.widget.CardView
            android:id="@+id/CardView"
         app:cardCornerRadius="@dimen/_3sdp"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout


                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:padding="@dimen/_2sdp"
                android:textColor="@color/white"
                android:text="Reports"

                android:fontFamily="@font/opensans_regular"
                android:background="@color/main_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spinner_report_type"
                style="@style/spinner_padding_left_right"
                android:background="@drawable/spinner_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/white"
            android:layout_margin="@dimen/_4sdp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout


                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:text="Reports"
                    android:padding="@dimen/_2sdp"
                    android:fontFamily="@font/opensans_regular"
                    android:background="@color/main_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/spinner_report_type1"
                    style="@style/spinner_padding_left_right"
                    android:background="@drawable/spinner_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/white"
            android:layout_margin="@dimen/_4sdp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout


                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:text="Day Wise"
                    android:padding="@dimen/_2sdp"
                    android:fontFamily="@font/opensans_regular"
                    android:background="@color/main_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/spinnerReportDayWise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:text="Select Date"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:drawablePadding="8dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:overScrollMode="never">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Patients"
                        style="@style/refreactive_head_title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"
                            android:padding="@dimen/_2sdp"

                            android:id="@+id/TextView_patient_count1"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_3sdp"
                            style="@style/refreactive_head_title11"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:padding="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:layout_weight="1"

                            style="@style/refreactive_head_title11"
                            android:id="@+id/TextView_patient_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:padding="@dimen/_2sdp">

                        <!-- Label -->
                        <TextView
                            android:id="@+id/generalPatientLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="General Patient"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginVertical="@dimen/_2sdp"/>

                        <!-- Colon -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:textSize="14sp"/>

                        <!-- Value -->
                        <TextView
                            android:id="@+id/generalPatientCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginVertical="@dimen/_2sdp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:padding="@dimen/_2sdp">

                        <!-- Label -->
                        <TextView
                            android:id="@+id/eyePatientLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Eye Patient"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginVertical="@dimen/_2sdp"/>

                        <!-- Colon -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:textSize="14sp"/>

                        <!-- Value -->
                        <TextView
                            android:id="@+id/eyePatientCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginVertical="@dimen/_2sdp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:padding="@dimen/_2sdp">

                        <!-- Label -->
                        <TextView
                            android:id="@+id/entPatientLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Ent Patient"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginVertical="@dimen/_2sdp"/>

                        <!-- Colon -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:textSize="14sp"/>

                        <!-- Value -->
                        <TextView
                            android:id="@+id/entPatientCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginVertical="@dimen/_2sdp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:padding="@dimen/_2sdp">

                        <!-- Label -->
                        <TextView
                            android:id="@+id/pathologyPatientLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Pythology Patient"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginVertical="@dimen/_2sdp"/>

                        <!-- Colon -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:textSize="14sp"/>

                        <!-- Value -->
                        <TextView
                            android:id="@+id/pathologyPatientCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginVertical="@dimen/_2sdp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Forms"
                        style="@style/refreactive_head_title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        tools:ignore="MissingConstraints" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyclerView_form_barChart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Interpretation"
                        style="@style/refreactive_head_title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <TextView
                                android:padding="@dimen/_3sdp"
                                style="@style/textView_bold"
                                android:text="Blood Pressure"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <LinearLayout
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/PieChart"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_130sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    />
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/RecyclerView_Blood_pressure"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:nestedScrollingEnabled="false"
                                    android:overScrollMode="never"/>

                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <TextView
                                android:padding="@dimen/_3sdp"
                                style="@style/textView_bold"
                                android:text="Pulse Rate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <LinearLayout
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/PieChart_pulse_rate"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_130sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    />
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/RecyclerView_pulse_rate"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:nestedScrollingEnabled="false"
                                    android:overScrollMode="never"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <TextView
                                android:padding="@dimen/_3sdp"
                                style="@style/textView_bold"
                                android:text="BMI"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <LinearLayout
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/PieChart_BMI"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_130sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    />
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/RecyclerView_BMI"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:nestedScrollingEnabled="false"
                                    android:overScrollMode="never"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <TextView
                                android:padding="@dimen/_3sdp"
                                style="@style/textView_bold"
                                android:text="Blood Sugar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <LinearLayout
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/PieChart_Blood_sugar"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_130sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    />
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/RecyclerView_Blood_sugar"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:nestedScrollingEnabled="false"
                                    android:overScrollMode="never"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <TextView
                                android:padding="@dimen/_3sdp"
                                style="@style/textView_bold"
                                android:text="Sympotoms"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <LinearLayout
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/pieChartSymptoms"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_130sdp"
                                    android:layout_weight="1"
                                    />
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerViewSymptoms"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:nestedScrollingEnabled="false"
                                    android:overScrollMode="never"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <TextView
                                android:padding="@dimen/_3sdp"
                                style="@style/textView_bold"
                                android:text="Impression"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <LinearLayout
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/pieChartImpression"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_130sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    />
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerViewImpression"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:nestedScrollingEnabled="false"
                                    android:overScrollMode="never"/>

                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <TextView
                                android:padding="@dimen/_3sdp"
                                style="@style/textView_bold"
                                android:text="Surgery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <View
                                android:background="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                            <LinearLayout
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/pieChartSurgery"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_130sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    />
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerViewSurgery"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:nestedScrollingEnabled="false"
                                    android:overScrollMode="never"/>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>








                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Sync Data"
                        style="@style/refreactive_head_title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="@dimen/_1sdp"
                            android:padding="@dimen/_2sdp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:text="Date"
                            style="@style/textView_bold"
                            android:background="@drawable/textview_background"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_margin="@dimen/_1sdp"
                            android:padding="@dimen/_2sdp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:text="Time"
                            style="@style/textView_bold"
                            android:background="@drawable/textview_background"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_margin="@dimen/_1sdp"
                            android:padding="@dimen/_2sdp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:text="Sync Type"
                            style="@style/textView_bold"
                            android:background="@drawable/textview_background"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/RecyclerView_syncedData"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>



                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>



    </androidx.cardview.widget.CardView>




</LinearLayout>