<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llUseApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_round_corner_rectangle"
        android:elevation="15dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Select What to Sync"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical"
         >

            <TextView
                android:id="@+id/tvSyncForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sync Forms"
                android:layout_gravity="center"
                android:background="@color/light_gray"
                android:layout_margin="@dimen/_3sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="#3F8CFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSyncImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sync Images"
                android:layout_margin="@dimen/_3sdp"
                android:layout_gravity="center"
                android:background="@color/light_gray1"
                android:padding="@dimen/_5sdp"
                android:textColor="#3F8CFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSyncVideos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sync Videos"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_3sdp"
                android:background="@color/light_gray"
                android:padding="@dimen/_5sdp"
                android:textColor="#3F8CFF"
                android:textStyle="bold" />



        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>