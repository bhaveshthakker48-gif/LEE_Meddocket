<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">



        <TextView
            android:id="@+id/tvSrNo"
            style="@style/textView_bold_5ssp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="0.3"
            android:text="1"
            android:background="@drawable/textview_background_blue"
            android:padding="@dimen/_2sdp"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvDateTime"
            style="@style/textView_bold_5ssp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="0.8"
            android:background="@drawable/textview_background_blue"
            android:padding="@dimen/_2sdp"
            android:text="01-07-2024"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvPatientName"
            style="@style/textView_bold_5ssp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:layout_margin="@dimen/_1sdp"
            android:text="sarvesh dummy"
            android:layout_weight="1.5"
            android:background="@drawable/textview_background_blue"
            android:padding="@dimen/_2sdp"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvPatientId"
            style="@style/textView_bold_5ssp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:layout_margin="@dimen/_1sdp"
            android:text="199833"
            android:layout_weight="0.7"
            android:background="@drawable/textview_background_blue"
            android:padding="@dimen/_2sdp"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvDrugsCount"
            style="@style/textView_bold_5ssp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="0.8"
            android:text="5"
            android:background="@drawable/textview_background_blue"
            android:padding="@dimen/_2sdp"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/llAction"
            style="@style/textView_bold_5ssp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_1sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/textview_background_blue"
            android:padding="@dimen/_2sdp"
            android:text="View Medicine"
            android:textAlignment="center"
            android:textColor="@color/black" >
            <ImageView
                android:id="@+id/ivViewPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:src="@drawable/ic_view_patient"
                />
            <ImageView
                android:id="@+id/ivEditPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_patient"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_3sdp"


                />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>