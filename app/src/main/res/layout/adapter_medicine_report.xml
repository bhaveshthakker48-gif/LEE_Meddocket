<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/TextView_device_id"
            style="@style/textView_bold_5ssp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@drawable/textview_background_blue"
            android:padding="@dimen/_2sdp"
            android:text="Device ID"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/TextView_user_id"
            style="@style/textView_bold_5ssp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@drawable/textview_background_blue"

            android:padding="@dimen/_2sdp"
            android:text="User ID"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView

            android:id="@+id/TextView_date"
            style="@style/textView_bold_5ssp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@drawable/textview_background_blue"
            android:padding="@dimen/_2sdp"
            android:text="Date"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/TextView_total_inserted"
            style="@style/textView_bold_5ssp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@drawable/textview_background_blue"
            android:padding="@dimen/_2sdp"
            android:text="Total Inserted"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/TextView_total_synced"
            style="@style/textView_bold_5ssp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@drawable/textview_background_blue"
            android:padding="@dimen/_2sdp"
            android:text="Total Synced"
            android:textAlignment="center"
            android:textColor="@color/black" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>